{
	"name": "phaser3-parcel-template",
	"version": "1.0.0",
	"description": "A typescript template project for Phaser 3 using Parceljs",
	"scripts": {
		"start": "npx parcel src/index.html -p 8000",
		"build": "npx parcel build src/index.html --out-dir dist",
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint ./src --ext .js,.jsx,.ts,.tsx"
	},
	"author": "supertommy",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ourcade/phaser3-parcel-template.git"
	},
	"homepage": "https://github.com/ourcade/phaser3-parcel-template",
	"devDependencies": {
		"@types/lodash": "^4.14.182",
		"@typescript-eslint/eslint-plugin": "^2.29.0",
		"@typescript-eslint/parser": "^2.29.0",
		"cssnano": "^4.1.11",
		"eslint": "^6.8.0",
		"minimist": ">=1.2.2",
		"parcel-plugin-clean-easy": "^1.0.2",
		"parcel-plugin-static-files-copy": "^2.4.3",
		"postcss": "^8.4.13",
		"sass": "^1.51.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"classnames": "^2.3.1",
		"jsx-dom": "^8.0.1-beta.5",
		"lodash": "^4.17.21",
		"phaser": "^3.55.2"
	},
	"parcelCleanPaths": [
		"dist"
	],
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
